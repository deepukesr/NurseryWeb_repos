        <div class="cart-page">
            <div class="cart-container">
                <h1>WECCOME TO GREEN GARDEN CART</h1>

                <div class="space">
                    <!-- for space in below cart -->
                </div>
                <div class="cart-items">
                    <!-- Cart items will be dynamically inserted here -->
                </div>
                <div class="continue">
                    <button class="continue-btn">CONTINUE</button>
                </div>
            </div>
            <div class="price-container">
                <div class="price-details">
                    <h3>PRICE DETAILS</h3>
                </div>
                <div class="mrp">
                    <span>MRP: </span>
                    <span id="mrp"><i class="fa-solid fa-indian-rupee-sign"></i> 00</span>
                </div>
                <div class="product-dis">
                    <span>Product Discount: </span>
                    <span id="product-dis"><i class="fa-solid fa-indian-rupee-sign"></i> - 00</span>
                </div>
                <div class="delivery-fees">
                    <span>Delivery Fees: </span>
                    <span id="delivery-fees"><i class="fa-solid fa-indian-rupee-sign"></i> 00</span>
                </div>
                <div class="total-amount">
                    <span>Total Amount: </span>
                    <span id="subtotal-price"><i class="fa-solid fa-indian-rupee-sign"></i> 00</span>
                </div>
                <a href="#" class="checkout-btn" id="checkout-btn">Proceed to Checkout</a>
